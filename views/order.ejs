<%- include('header') %>

<div class="mt-3">
    <div class="h4">รายการสั่งซื้อจากลูกค้า</div>
    <table class="table table-bordered table-stiped">
        <thead>
            <tr>
                <th width="380px"></th>
                <th width="80px">รหัสบิล</th>
                <th width="200px">ชื่อ</th>
                <th width="200px">เบอร์ติดต่อ</th>
                <th>ที่อยู่จัดส่ง</th>
                <th>วันที่ชำระเงิน</th>
                <th>วันที่จัดส่ง</th>
                <th>เลขติดตามพัสดุ</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach((order) => { %>
            <tr>
                <td class="text-center">
                    <a class="btn btn-info" href="payOrder/<%= order.id %>">
                        <span class="material-symbols-outlined material-icons">
                            attach_money
                        </span>
                        ชำระเงิน
                    </a>
                    <a class="btn btn-success" href="sendOrder/<%= order.id %>">
                        <span class="material-symbols-outlined material-icons">
                            local_shipping
                        </span>
                        จัดส่งสินค้า
                    </a>
                    <a class="btn btn-danger" href="deleteOrder/<%= order.id %>" onclick="return confirm('Are you sure delete ?')">
                        <span class="material-symbols-outlined material-icons">
                            close
                        </span>
                        ยกเลิก
                    </a>
                </td>
                <td><a href="/orderInfo/<%= order.id %>"><%= order.id %></a></td>
                <td><%= order.name %></td>
                <td><%= order.phone %></td>
                <td><%= order.address %></td>
                <td><%= dayjs(order.pay_date).format(dayFormat) %></td>
                <td><%= dayjs(order.send_date).format(dayFormat) %></td>
                <td><%= order.track_code %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('footer') %>