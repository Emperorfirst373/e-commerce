<%- include('header') %>

<div class="card mt-3">
    <div class="card-body">
        <div class="card-title">ประเภทสินค้า</div>
        <div class="mt-3">
            <a class="btn btn-info" href="/addGroupProduct">
                <span class="material-symbols-outlined material-icons">
                    add
                </span>
                เพิ่มรายการ
            </a>

            <table class="table table-bordered table-striped mt-3">
                <thead>
                    <tr>
                        <th width="140px"></th>
                        <th>ชื่อประเภทสินค้า</th>
                    </tr>
                </thead>
                <tbody>
                    <% groupProducts.forEach((groupProduct) => { %>
                    <tr>
                        <td class="text-center">
                            <a class="btn btn-info" href="/editGroupProduct/<%= groupProduct.id %>">
                                <span class="material-symbols-outlined material-icons">
                                    edit
                                </span>
                            </a>
                            <a class="btn btn-danger" href="/deleteGroupProduct/<%= groupProduct.id %>" onclick="return confirm('Are you sure delete ?')">
                                <span class="material-symbols-outlined material-icons">
                                    close
                                </span>
                            </a>
                        </td>
                        <td><%= groupProduct.name %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('footer') %>