<%- include('header') %>

<form method="post" action="/changeProfile">
    <div class="card mt-3">
        <div class="card-body">
            <div class="card-title">แก้ไขข้อมูล</div>
            <div class="mt-3">
                <label>ชื่อ</label>
                <input type="text" name="name" class="form-control" value="<%= user.name %>" />
            </div>
            <div class="mt-3">
                <label>username</label>
                <input type="text" name="usr" class="form-control" value="<%= user.usr %>" />
            </div>
            <div class="mt-3">
                <label>password <span class="text-danger"> *** หากไม่ป้อนจะยึดตามรหัสเดิม</span></label>
                <input type="password" name="pwd" class="form-control" />
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-info">
                    Save
                </button>
            </div>

            <% if (session.message != undefined) { %>
            <div class="alert alert-success mt-3">
                <%= session.message %>
                <% session.message = undefined %>
            </div>
            <% } %>
        </div>
    </div>
</form>

<%- include('footer') %>